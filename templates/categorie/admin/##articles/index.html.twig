{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
    <h1>Articles index</h1>

    <div class = "jumbotron">

            </br>
            <h3 style="text-align:center">Administrator / articles Index </h3>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Categorie</th>
                <th>Auteur</th>
                <th>Resume</th>
                <th>Contenu</th>
                <th>Created_At</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.categorie }}</td>
                <td>{{ article.auteur }}</td>
                <td>{{ article.resume }}</td>
                <td>{{ article.contenu }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.image }}</td>
                <td>
                    <a href="{{ path('articles_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('articles_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                <p align="right" >
                <a  href="{{ path('articles_new') }}">
                    <button type="button" class="btn btn-secondary">Nouvel article </button>
                </a>
            </p>
{% endblock %}
