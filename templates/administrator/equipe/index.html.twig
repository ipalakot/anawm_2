{% extends 'base_adm.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block body %}

        <div class = "jumbotron">
            </br>
            </br>
            </br>
            </br>
            <h3 style="text-align:left"> Team / Index </h3>
        </div>
    
    <div class="container">

    <h3> Liste des membres / Anawin</h3>
    </br>

    <table class="table">
        <thead>
            <tr>
              
                <th>NOMS</th>
                <th>PRENOMS</th>
                <th>FONCTION</th>
                <th>EMAIL</th>
                <th>PAYS</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td>{{ equipe.noms }}</td>
                <td>{{ equipe.prenoms }}</td>
                <td>{{ equipe.fonction }}</td>
                <td>{{ equipe.email }}</td>
                <td>{{ equipe.pays }}</td>

                <td>
                    <a href="{{ path('equipe_administrator_show', {'id': equipe.id}) }}" class="btn btn-primary btn-sm">Lire</a>
                    <a href="{{ path('equipe_administrator_edit', {'id': equipe.id}) }} "  class="btn btn-info btn-sm">Editer</a>
                    {# <a href="{{ path('equipe_administrator_delete', {'id': equipe.id}) }} "  class="btn btn-info btn-sm">Editer</a> #}
                    {{ include('administrator/equipe/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('equipe_administrator_new') }}" class="btn btn-primary btn-sm">Creer un Membre</a>

</div>
{% endblock %}
