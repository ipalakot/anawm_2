{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs!{% endblock %}

{% block body %}

<div class = "jumbotron">
</br>
</br>
</br>
</br>
    <h3 style="text-align:center"><mark>Utilisateurs</mark></h3>
</div>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Mail</th>
        <th>Roles</th>
    </tr>
    {%for user in users %}
    <tr>
        <td>{{ user.id }}</td>
        <td>{{ user.username }}</td>
        <td>{{ user.email }}</td>
        <td>{{ user.roles[0] }}</td>        
     </tr>
    {% endfor%}
</table>
{% endblock %}