                <td>
                    <a href="{{ path('articles_show',  {id: article.id, slug: article.slug })}}" class="btn btn-primary btn-sm">Lire</a>
                    <a href="{{ path('articles_edit',  {id: article.id, slug: article.slug }) }}" class="btn btn-info btn-sm">Edit</a> 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
