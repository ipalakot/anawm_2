{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
        <div class = "jumbotron">
            </br>
            </br>
            </br>
            </br>
            <h3 style="text-align:left"> Articles / Index </h3>
        </div>

<div class="container">
   
	<!-- container -->
<div class="container">


  <div class="row">
		</br></br>

		<div class="col-sm-2"> IMAGE</div>
		<div class="col-sm-2"> TITRE </div>
		<div class="col-sm-5">RESUME </div>
		<div class="col-sm-1"></div>
</div>

        {% for article in articles %}

  <div class="row">
		</br>
		<div class="col-sm-2"> 					{% if article.filename %}
							<img src="{{vich_uploader_asset(article, 'imageFile') | imagine_filter('thumb') }}" >
							{% else %}
							<img src="{{'/images/articles/empty2.jpg'| imagine_filter('thumb') }}" alt="card-img-top"  >                    
						{% endif %}
						</div>
		<div class="col-sm-2">{{ article.titre }} </div>

		<div class="col-sm-5">{{ article.resume }}</div>

		<div class="col-sm-1"><a href="{{ path('articles_show', {id: article.id, slug: article.slug }) }}" class="btn btn-warning btn-sm">Lire </a></div>
</div>


			
        {% endfor %}
        </br>
        </br>
        </br>
        </br>
        </br>
    
</div> 

 </div>
{% endblock %}
